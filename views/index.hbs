<a href="/admin">
  <div class="login" style="position:absolute;right:30px;top:10px;font-size:20px">Login</div>
</a>
<div class="container">
  <h3>Pepitas Foods </h3>
  <hr>
  {{#each item}}
  <div id="item-container row m-1">
    <div class="form-check-inline item-description" id="item-desc">
      {{description}}
    </div>

    <div class="form-check form-check-inline " id="smallSize">
      <input class="form-check-input sizes" type="radio" name="{{description}}" id="inlineRadio1" onclick="return handleItem(this)" checked>
      <label class="form-check-label" for="inlineRadio1">500 ml</label>
    </div>

    <div class="form-check form-check-inline " id="LargeSize">
      <input class="form-check-input sizes" type="radio" name="{{description}}" id="inlineRadio2" onclick="return handleItem(this)">
      <label class="form-check-label" for="inlineRadio2">650 ml</label>
    </div>
    <div class="form-check-inline test ">
      <input class="form-control quantity" type="number" min="1" value="1" onchange="handleItem(this)">
    </div>
    <input class="form-control form-check-inline text-center price" type="number" value="0" data-small="{{priceSmall}}" data-large="{{priceLarge}}" readonly>

    <div class="form-check-inline ml-1 btn btn-primary addButton">
      Add Item
    </div>
  </div>
  {{/each}}
  <hr>
  <h3>Order Details</h3>
  <div class="container preview list-group" id="preview"></div>

  <a class="btn btn-primary m-2 url-handle" href="#" target="__blank" id="url-handle">Send</a>
  <a class="btn btn-danger m-2 url-handle" href="/" id="Clear-List">Clear list</a>
</div>


<hr>
<div class="container">
  <h4>Temporary input</h4>
  <form class="form-group row" action="/create" method="POST">
    <input type="text" class="form-control col-3" placeholder="Item description" name="description">
    <input type="number" class="form-control col-3" placeholder="Small Size Price" name="smallPrice">
    <input type="number" class="form-control col-3" placeholder="Large Size Price" name="largePrice">
    <button type="submit" class="btn btn-primary">Save To Database</button>
  </form>
</div>


